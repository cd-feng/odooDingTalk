<odoo>
    <data noupdate="1">

        <record id="oa_leave_application_group_number" model="ir.sequence">
            <field name="name">请假单编号规则</field>
            <field name="code">oa.leave.application.code</field>
            <field name="prefix">No%(year)s%(month)s%(day)s</field>
            <field name="suffix"/>
            <field name="padding">5</field>
        </record>

        <record id="oa_travel_application_number" model="ir.sequence">
            <field name="name">出差申请编号规则</field>
            <field name="code">oa.travel.application.code</field>
            <field name="prefix">No%(year)s%(month)s%(day)s</field>
            <field name="suffix"/>
            <field name="padding">5</field>
        </record>

        <record id="oa_outing_application_number" model="ir.sequence">
            <field name="name">外出申请编号规则</field>
            <field name="code">oa.outing.application.code</field>
            <field name="prefix">No%(year)s%(month)s%(day)s</field>
            <field name="suffix"/>
            <field name="padding">5</field>
        </record>

        <record id="oa_overtime_application_number" model="ir.sequence">
            <field name="name">加班申请编号规则</field>
            <field name="code">oa.overtime.application.code</field>
            <field name="prefix">No%(year)s%(month)s%(day)s</field>
            <field name="suffix"/>
            <field name="padding">5</field>
        </record>

        <record id="oa_reissue_application_number" model="ir.sequence">
            <field name="name">补签申请编号规则</field>
            <field name="code">oa.reissue.application.code</field>
            <field name="prefix">BQ%(year)s%(month)s%(day)s</field>
            <field name="suffix"/>
            <field name="padding">5</field>
        </record>

    </data>
</odoo>