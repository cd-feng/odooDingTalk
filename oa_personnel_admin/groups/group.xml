<odoo>
	<data>

		<record model="ir.module.category" id="oa_personnel_admin.main">
			<field name="name">协同办公-行政人事</field>
			<field name="visible" eval="0" />
		</record>

		<record id="oa_personnel_admin.personnel" model="res.groups">
			<field name="name">员工</field>
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
			<field name="category_id" ref="oa_personnel_admin.main"/>
		</record>

		<record id="oa_personnel_admin.administrative_manager" model="res.groups">
			<field name="name">部门领导</field>
			<field name="category_id" ref="oa_personnel_admin.main"/>
			<field name="implied_ids" eval="[(4, ref('oa_personnel_admin.personnel'))]"/>
			<field name="users" eval="[(4, ref('base.user_admin'))]"/>
		</record>

		<!-- 默认用户权限 -->
		<record id="base.default_user" model="res.users">
			<field name="groups_id" eval="[(4, ref('oa_personnel_admin.personnel'))]" />
		</record>

	</data>
</odoo>
